#!/usr/bin/env sh

markdown_options='markdown_github-raw_html-native_divs-native_spans-markdown_attribute-header_attributes-auto_identifiers-link_attributes+table_captions+multiline_tables+simple_tables+pipe_tables+grid_tables+implicit_figures'

pandoc -f html \
  --filter ~/.bin/pandoc_remove_single_tables \
  --atx-headers \
  -t $markdown_options \
  --column=90 \
  --normalize -R -s -S "$1"
