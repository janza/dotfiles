#!/usr/bin/env sh

markdown_options=''
for option in 'markdown_github
-raw_html-native_divs
-native_spans
-markdown_attribute
-header_attributes
-auto_identifiers
-link_attributes
+table_captions
+multiline_tables
+simple_tables
+pipe_tables
+grid_tables
+fenced_code_blocks
+backtick_code_blocks
+fenced_code_attributes
+inline_code_attributes
-implicit_figures'; do
  markdown_options="$markdown_options${option//[[:space:]]}"
done

pandoc "${1:-/dev/stdin}" \
  -f html \
  --filter ~/.bin/pandoc_remove_single_tables \
  --atx-headers \
  -t "$markdown_options" \
  --column=90 \
  --normalize -R -s -S |
  sed 's/^\s*//ig' |
  cat -s
