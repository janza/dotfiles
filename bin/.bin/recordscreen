#!/bin/bash
set -euo pipefail

if [ -n "$(pidof wlstream)" ]; then
    killall -KILL wlstream
    exit 0
fi

read -r X Y W H < <(slurp -d | tr , ' ' | tr x ' ')

name="recording-$(date '+%Y%m%d%H%M%S')"

scale=$(swaymsg -t get_outputs --raw | jq '.[0].scale')
X=$(echo "$X*$scale" | bc)
Y=$(echo "$Y*$scale" | bc)
W=$(echo "$W*$scale" | bc)
H=$(echo "$H*$scale" | bc)

wlstream 24 vaapi /dev/dri/renderD128 libx264 nv12 12 "/tmp/$name.mkv" || echo continuing

ffmpeg -i "/tmp/$name.mkv" -filter:v "crop=$W:$H:$X:$Y" "/tmp/$name-cropped.webm"

url=$(curl -sf -X POST -F "f=@-;filename=file" 'https://puull.pw' < "/tmp/$name-cropped.webm" | sed 's/png/webm/')

notify-send "Copied to clipboard: $url"
echo -n "$url" | wl-copy

rm "/tmp/$name*"
