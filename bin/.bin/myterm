#!/usr/bin/env bash
# cd ~/code/oos/kitty
# exec konsole --separate "$@"

if [[ "$#" == "0" ]]; then
    if [ -n "$floating" ]; then
        exec termite --class "floating"
    else
        exec termite
    fi
    # exec konsole --separate
else
    if [ -n "$floating" ]; then
        exec termite --class "floating" -e "$@"
    else
        exec termite -e "$@"
    fi
    # exec konsole --separate -e $@
fi
