#!/usr/bin/env bash

if [[ "$#" == "0" ]]; then
    if [ -n "$floating" ]; then
        exec termite --class "floating" --title "make_me_floating"
    elif [ -n "$fullscreen" ]; then
        exec termite --class "fullscreenme"
    else
        exec termite
    fi
else
    if [ -n "$floating" ]; then
        exec termite --class "floating" --title "make_me_floating" -e "$@"
    elif [ -n "$fullscreen" ]; then
        exec termite --class "fullscreenme" -e "$@"
    else
        exec termite -e "$@"
    fi
fi


